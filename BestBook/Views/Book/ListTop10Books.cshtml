@model IEnumerable<Book>
@{
    Layout = "_Layout";
}


<div class="row justify-content-center">
    <h1 class="text-info">Top 10 highest rated books</h1>
    <br />
</div>
@if (Model != null)
{
    @foreach (var book in Model)
    {
        <div class="container">
            <div class="row justify-content-md-center">
                <div class="col-md-auto rounded" style="background-color: antiquewhite;">
                    <img src="@("/Image/"+ book.PicLink)" asp-append-version="true" width="70" height="100" />
                </div>
                <div class="col-5" style="height: 100px;background-color: antiquewhite;">
                    <h5>@book.Name</h5>
                    @book.Description.Truncate(45, "") @if (book.Description.Length > 45)
                    {
                        <a data-bs-toggle="tooltip" data-bs-placement="top" title="@book.Description">...</a>
                    }<br />
                    <span style="font-size:10px">
                        Rating: @if (book.AvgStar != null)
                        {
                            @book.AvgStar;
                        }

                    </span>
                </div>
                <div class="col-md-auto d-flex align-items-center justify-content-center rounded" style="background-color:antiquewhite;">
                    <input type="submit" class="btn btn-outline-primary" style="height:50px" value="Details" onclick="location.href='@Url.Action("BookDetails", "Book", new {id=book.Id })'">
                </div>
            </div>
        </div>
        <br />


    }
}
